{
	"name": "universal-devkit",
	"description": "A cli tool to setup development tools",
	"version": "1.0.0",
	"type": "module",
	"keywords": [
		"universal",
		"development",
		"formatting",
		"tools",
		"eslint",
		"prettier",
		"stylelint",
		"husky",
		"lint-staged",
		"commitlint",
		"commitizen",
		".vscode",
		"editorconfig"
	],
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git"
	},
	"files": [
		"dist",
		"bin",
		"package.json",
		"README.md"
	],
	"license": "MIT",
	"main": "bin/index.js",
	"bin": {
		"universal-devkit": "bin/index.js"
	},
	"scripts": {
		"build": "rimraf dist && tsc --project tsconfig.json && npm run copy",
		"copy": "copyfiles README.md package.json dist && npm run copy:bin",
		"copy:bin": "copyfiles -a bin/templates/** dist",
		"clean": "rimraf dist",
		"lint": "eslint . --ext ts,tsx,js,jsx --report-unused-disable-directives --max-warnings 0",
		"lint:fix": "eslint . --ext ts,tsx,js,jsx --report-unused-disable-directives --max-warnings 0 --fix",
		"bump": "bump",
		"pub": "npm run bump && npm run build && cd dist && npm publish",
		"drypub": "cd dist && npm publish --dry-run",
		"link": "cd dist && npm link",
		"check-types": "tsc --noEmit",
		"prettify": "prettier --ignore-path .gitignore --write \"**/*.(js|jsx|ts|tsx)\"",
		"format": "npm run lint:fix && npm run prettify",
		"preinstall": "husky install",
		"commit": "cz"
	},
	"devDependencies": {
		"@babel/preset-env": "^7.23.2",
		"@commitlint/cli": "18.4.3",
		"@commitlint/config-conventional": "18.4.3",
		"@jsdevtools/version-bump-prompt": "^6.1.0",
		"@types/jest": "^29.5.1",
		"@types/node": "^18.16.0",
		"@types/npmcli__package-json": "^4.0.3",
		"@typescript-eslint/eslint-plugin": "6.12.0",
		"@typescript-eslint/parser": "6.12.0",
		"commitizen": "4.3.0",
		"copyfiles": "^2.4.1",
		"cz-conventional-changelog": "3.3.0",
		"eslint": "8.54.0",
		"husky": "8.0.3",
		"lint-staged": "15.1.0",
		"jest": "^29.5.0",
		"prettier": "3.1.0",
		"rimraf": "^5.0.5",
		"stylelint": "15.11.0",
		"stylelint-config-standard": "34.0.0",
		"ts-jest": "^29.1.0",
		"tslib": "^2.5.0",
		"typescript": "^5.0.4"
	},
	"dependencies": {
		"@clack/prompts": "^0.7.0",
		"@code-shaper/shaper-utils": "*",
		"@npmcli/package-json": "^5.0.0",
		"shell-artist": "2.7.0"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"npm run prettify",
			"npm run lint:fix"
		],
		"*.{css,scss}": [
			"npm run lint-css"
		],
		"*.{json,yaml,md,html}": [
			"npm run prettify"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		],
		"rules": {
			"body-leading-blank": [
				2,
				"always"
			]
		}
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-conventional-changelog"
		}
	}
}
