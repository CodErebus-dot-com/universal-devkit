{
  "name": "@coderebus/universal-devkit",
  "description": "A cli tool to setup development tools",
  "version": "0.0.1",
  "type": "module",
  "keywords": [
    "universal",
    "development",
    "formatting",
    "tools",
    "eslint",
    "prettier",
    "stylelint",
    "husky",
    "lint-staged",
    "commitlint",
    "commitizen",
    ".vscode",
    "editorconfig"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git"
  },
  "files": [
    "README.md",
    "package.json",
    "dist"
  ],
  "license": "MIT",
  "main": "index.js",
  "bin": {
    "universal-devkit": "index.js"
  },
  "scripts": {
    "build": "tsup && copyfiles README.md package.json dist",
    "clean": "rimraf dist",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:fix": "npm run lint -- --fix",
    "bump": "bump",
    "pub": "npm run bump && npm run build && cd dist && npm publish",
    "link": "cd dist && npm link"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.2",
    "@jsdevtools/version-bump-prompt": "^6.1.0",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.0",
    "@types/npmcli__package-json": "^4.0.3",
    "copyfiles": "^2.4.1",
    "eslint": "^8.39.0",
    "jest": "^29.5.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "@code-shaper/shaper-utils": "*",
    "@npmcli/package-json": "^5.0.0",
    "shell-artist": "2.7.0",
    "tslib": "^2.5.0"
  }
}
